<%- include("partials/header.ejs") %>

    </nav>
    </header>
    <main>
        <div class="center">
            <img class="image" src="<%= locals.imageUrl %>" alt="Book Cover" />
        </div>
        <p class="center"><a href="https://openlibrary.org/isbn/<%= locals.isbn %>" target="_blank">
                View on Open Library
            </a></p>

        <form class="form" action="/add-book" method="post">
            <div class="form-group">
                <label for="title">Rating (Out of 10):</label>
                <input class="input-box" type="number" name="rating" placeholder="Enter your rating" required min="0"
                    max="10" step="1">
            </div>
            <div class="form-group">
                <label for="date">Date Read:</label>
                <input class="input-box" type="date" name="date" placeholder="Enter the date" required>
            </div>
            <div class="form-group">
                <label for="notes">Notes:</label>
                <textarea class="input-box" name="notes" placeholder="Enter your notes" required></textarea>
            </div>
            <div class="position-button">
                <button class="button padding-button" type="submit">Add</button>
            </div>
        </form>
    </main>

    <%- include("partials/footer.ejs") %>